<h1>All Boards</h1>
<% @tasks.each do |task| %>
  <div class="card">
    <div class="card_content">
      <div class="card_title">
        <%= task.title %>
      </div>
      <div class="card_detail">
        <%= task.content %>
        <%= link_to '編集', edit_task_path(task) %>
        <%= link_to '削除', task_path(task), method: :delete %>
      </div>
    </div>
  </div>
<% end %>
